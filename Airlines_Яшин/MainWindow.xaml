<Window x:Class="Airlines_Яшин.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines_Яшин"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="#FF0C73FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="51*"/>
            </Grid.ColumnDefinitions>
            <Image Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" Source="/plane_10829993.png"/>
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Управление авиалиниями" Foreground="White" FontSize="16" FontWeight="Bold" Margin="55,14,0,0"/>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Content="Выйти" Background="White" BorderBrush="White" Grid.Column="1" Margin="0,10,10,0"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,70,0,0"/>
    </Grid>
</Window>
